---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
    title="Conecta con Emivir | Enlaces Oficiales" 
    description="Acceso directo a mis proyectos, redes sociales y contacto. Soluciones web con honestidad técnica."
    image="/og-links.png"  >

    <div class="min-h-screen flex flex-col bg-white text-slate-900 dark:bg-[#0a0a0a] dark:text-slate-100 dark-mode-transition">
        <header class="w-full max-w-xl mx-auto px-6 h-20 flex items-center justify-between">
            <div class="logo-text text-xl">
                <a href={import.meta.env.BASE_URL} class="hover:opacity-80 transition-opacity">emivir<span class="text-brand">.</span>dev</a>
            </div>
            
            <button id="theme-toggle-links" class="p-2.5 rounded-full hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors" aria-label="Cambiar tema">
                <i data-lucide="moon" class="w-5 h-5 dark:hidden text-slate-600"></i>
                <i data-lucide="sun" class="w-5 h-5 hidden dark:block text-brand"></i>
            </button>
        </header>

        <main class="flex-grow w-full max-w-xl mx-auto px-6 py-8 flex flex-col items-center">
            
            <div class="text-center mb-10">
                <div class="relative inline-block mb-4">
                    <div class="w-20 h-20 bg-slate-50 dark:bg-slate-900 rounded-3xl flex items-center justify-center border border-slate-100 dark:border-slate-800">
                        <i data-lucide="code-2" class="w-8 h-8 text-brand"></i>
                    </div>
                    <div class="absolute -bottom-1 -right-1 w-6 h-6 bg-brand rounded-full border-4 border-white dark:border-[#0a0a0a] flex items-center justify-center">
                        <div class="w-1.5 h-1.5 bg-white rounded-full animate-pulse"></div>
                    </div>
                </div>
                <h1 class="text-2xl font-black tracking-tighter mb-1">Emivir<span class="text-brand">.</span></h1>
                <p class="text-sm text-slate-500 dark:text-slate-400 font-medium tracking-tight">Desarrollo web con honestidad técnica</p>
            </div>

            <div class="w-full space-y-3">
                
                <a href={import.meta.env.BASE_URL} class="featured-link flex items-center gap-4 p-4 bg-slate-50 dark:bg-[#0f0f0f] border border-slate-100 dark:border-slate-800 rounded-2xl group transition-all active:scale-[0.97]">
                    <div class="w-10 h-10 bg-brand/10 rounded-xl flex items-center justify-center">
                        <i data-lucide="home" class="w-5 h-5 text-brand"></i>
                    </div>
                    <span class="font-bold tracking-tight">Sitio Web Principal</span>
                    <i data-lucide="arrow-right" class="w-4 h-4 ml-auto text-brand opacity-0 group-hover:opacity-100 group-hover:translate-x-1 transition-all"></i>
                </a>

                <div class="py-4 flex items-center gap-4">
                    <div class="h-px bg-slate-100 dark:bg-slate-800 flex-grow"></div>
                    <span class="text-[10px] font-black uppercase tracking-[0.3em] text-slate-400">Social</span>
                    <div class="h-px bg-slate-100 dark:bg-slate-800 flex-grow"></div>
                </div>

                <a href="https://github.com/roemdev" class="flex items-center gap-4 p-4 bg-slate-50 dark:bg-[#0f0f0f] border border-slate-100 dark:border-slate-800 rounded-2xl group hover:border-slate-200 dark:hover:border-slate-700 transition-all active:scale-[0.97]">
                    <div class="w-10 h-10 bg-white dark:bg-slate-900 rounded-xl flex items-center justify-center border border-slate-100 dark:border-slate-800 text-slate-400 group-hover:text-brand transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg>
                    </div>
                    <span class="font-bold tracking-tight text-slate-700 dark:text-slate-200">GitHub</span>
                    <i data-lucide="external-link" class="w-4 h-4 ml-auto opacity-0 group-hover:opacity-100 transition-opacity text-brand"></i>
                </a>

                <a href="https://x.com/roemdev" class="flex items-center gap-4 p-4 bg-slate-50 dark:bg-[#0f0f0f] border border-slate-100 dark:border-slate-800 rounded-2xl group hover:border-slate-200 dark:hover:border-slate-700 transition-all active:scale-[0.97]">
                    <div class="w-10 h-10 bg-white dark:bg-slate-900 rounded-xl flex items-center justify-center border border-slate-100 dark:border-slate-800 text-slate-400 group-hover:text-brand transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4l11.733 16h4.267l-11.733 -16z"></path><path d="M4 20l6.768 -6.768m2.46 -2.46l6.772 -6.772"></path></svg>
                    </div>
                    <span class="font-bold tracking-tight text-slate-700 dark:text-slate-200">X (Twitter)</span>
                    <i data-lucide="external-link" class="w-4 h-4 ml-auto opacity-0 group-hover:opacity-100 transition-opacity text-brand"></i>
                </a>

                <div class="py-4 flex items-center gap-4">
                    <div class="h-px bg-slate-100 dark:bg-slate-800 flex-grow"></div>
                    <span class="text-[10px] font-black uppercase tracking-[0.3em] text-slate-400">Contacto</span>
                    <div class="h-px bg-slate-100 dark:bg-slate-800 flex-grow"></div>
                </div>

                <a href="mailto:hola@emivir.dev" class="flex items-center gap-4 p-4 bg-slate-50 dark:bg-[#0f0f0f] border border-slate-100 dark:border-slate-800 rounded-2xl group hover:border-slate-200 dark:hover:border-slate-700 transition-all active:scale-[0.97]">
                    <div class="w-10 h-10 bg-white dark:bg-slate-900 rounded-xl flex items-center justify-center border border-slate-100 dark:border-slate-800">
                        <i data-lucide="mail" class="w-5 h-5 text-slate-400 group-hover:text-brand transition-colors"></i>
                    </div>
                    <span class="font-bold tracking-tight text-slate-700 dark:text-slate-200">hola@emivir.dev</span>
                </a>

                <a href="https://api.whatsapp.com/send?phone=18293204611" target="_blank" class="flex items-center gap-4 p-4 bg-slate-50 dark:bg-[#0f0f0f] border border-slate-100 dark:border-slate-800 rounded-2xl group hover:border-slate-200 dark:hover:border-slate-700 transition-all active:scale-[0.97]">
                    <div class="w-10 h-10 bg-white dark:bg-slate-900 rounded-xl flex items-center justify-center border border-slate-100 dark:border-slate-800 text-slate-400 group-hover:text-brand transition-colors">
                        <svg role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 fill-current">
                            <title>WhatsApp</title>
                            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                        </svg>
                    </div>
                    <span class="font-bold tracking-tight text-slate-700 dark:text-slate-200">WhatsApp Directo</span>
                </a>

            </div>
        </main>

        <footer class="py-12">
            <div class="max-w-xl mx-auto px-6 text-center">
                <p class="text-[10px] font-black uppercase tracking-[0.4em] text-slate-400 opacity-60">
                    © 2026 emivir.dev <br> Estabilidad y Valor
                </p>
            </div>
        </footer>
    </div>
</BaseLayout>

<script>
    const themeToggle = document.getElementById('theme-toggle-links');
    themeToggle?.addEventListener('click', () => {
        const isDark = document.documentElement.classList.toggle('dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
    });
</script>